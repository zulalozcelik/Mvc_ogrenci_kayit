@model Mvc_ogrenci_kayit.Models.Table

@{
    ViewBag.Title = "Edit";
}

<h4>Öğrenci Düzenle</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OgrID)

        <div class="form-group">
            @Html.LabelFor(model => model.OgrAD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OgrAD, new { @class = "form-control", PlaceHolder = "Adınız ", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrAD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrSoyad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OgrSoyad, new { @class = "form-control", PlaceHolder = "Soyadınızı Girin ", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrSoyad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrMail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OgrMail, new { @class = "form-control", PlaceHolder = "Mail Adresi ", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrMail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrFotograf, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OgrFotograf, new { @class = "form-control", PlaceHolder = "Fotoğraf Link Adresi" })
                @Html.ValidationMessageFor(model => model.OgrFotograf, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrAdres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OgrAdres, new { @class = "form-control", PlaceHolder = "Adresi Yazın", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrAdres, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Öğrenci Listesine Git", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
